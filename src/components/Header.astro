---
import HeaderLink from "./HeaderLink.astro";
---

<header class="py-4 shadow fixed w-full bg-white z-10">
	<div class="u-container">
		<div class="flex items-center justify-between">
			<div>
				<HeaderLink class="font-pt-sans text-2xl lg:text-3xl" href="/">
					<img src="/images/logo.webp" alt="logo">
				</HeaderLink>
			</div>
			<nav>
				<!-- DESKTOP NAVIGATION -->
				<ul class="hidden lg:flex lg:items-center lg:gap-x-6">
					<li>
						<HeaderLink
							class="font-bold text-blue-munsell hover:text-black duration-300"
							href="/"
						>
							Vender
						</HeaderLink>
					</li>
					<li>
						<HeaderLink
							class="font-bold text-blue-munsell hover:text-black duration-300"
							href="/blog"
						>
							Blog
						</HeaderLink>
					</li>
					<li>
						<HeaderLink
							class="font-bold text-blue-munsell hover:text-black duration-300"
							href="/prices"
						>
							Precios
						</HeaderLink>
					</li>
					<li>
						<HeaderLink
							class="font-bold text-blue-munsell hover:text-black duration-300"
							href="/resources"
						>
							Recursos
						</HeaderLink>
					</li>
				</ul>
				<!-- DESKTOP NAVIGATION END -->
				<!-- MOBILE NAVIGATION -->
				<ul
					id="nav"
					class="absolute top-0 -left-full bg-white w-full h-screen flex flex-col justify-evenly items-center lg:hidden duration-300"
				>
					<li>
						<HeaderLink
							class="font-bold text-blue-munsell text-lg"
							href="/"
						>
							Vender
						</HeaderLink>
					</li>
					<li>
						<HeaderLink
							class="font-bold text-blue-munsell text-lg"
							href="/blog"
						>
							Blog
						</HeaderLink>
					</li>
					<li>
						<HeaderLink
							class="font-bold text-blue-munsell text-lg"
							href="/prices"
						>
							Precios
						</HeaderLink>
					</li>
					<li>
						<HeaderLink
							class="font-bold text-blue-munsell text-lg"
							href="/resources"
						>
							Recursos
						</HeaderLink>
					</li>
					<button id="nav-btn-close" class="absolute top-5 right-5">
						<svg
							xmlns="http://www.w3.org/2000/svg"
							fill="none"
							viewBox="0 0 24 24"
							stroke-width="1.5"
							stroke="currentColor"
							class="w-6 h-6"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								d="M6 18L18 6M6 6l12 12"></path>
						</svg>
					</button>
				</ul>
				<!-- MOBILE NAVIGATION END -->
			</nav>
			<button id="nav-btn-open" class="lg:hidden">
				<svg
					xmlns="http://www.w3.org/2000/svg"
					fill="none"
					viewBox="0 0 24 24"
					stroke-width="1.5"
					stroke="currentColor"
					class="w-6 h-6"
				>
					<path
						stroke-linecap="round"
						stroke-linejoin="round"
						d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"></path>
				</svg>
			</button>
			<button
				class="hidden lg:block bg-blue-munsell text-white py-2 px-8 rounded font-bold hover:bg-trangerine duration-300"
			>
				Login
			</button>
		</div>
	</div>
</header>

<script>
	// ELEMENTS
	const nav = document.getElementById("nav");
	const navBtnOpen = document.getElementById("nav-btn-open");
	const navBtnClose = document.getElementById("nav-btn-close");

	// FUNCTIONS
	function openMenu() {
		nav && nav.classList.add("left-0");
		nav && nav.classList.remove("-left-full");
	}

	function closeMenu() {
		nav && nav.classList.add("-left-full");
		nav && nav.classList.remove("left-0");
	}

	// EVENTS
	navBtnOpen && navBtnOpen.addEventListener("click", openMenu);
	navBtnClose && navBtnClose.addEventListener("click", closeMenu);
	window.addEventListener("scroll", closeMenu);
</script>
