    <div class="pt-20 pb-10 lg:py-0 overflow-hidden">
        <div class="u-container">
            <div
                class="-mt-8 lg:-mt-12 xl:-mt-16 flex flex-col-reverse lg:flex-row lg:justify-center lg:items-center"
            >
                <div class="lg:w-1/2">
                    <video
                        class="w-1/2 lg:w-full mx-auto lg:mx-0"
